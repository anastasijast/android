<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baranja_L"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pregled_aktivnosti"
    android:orientation="vertical"
    android:layout_gravity="center_vertical"
    android:background="@drawable/bg"
    android:paddingVertical="30dp"
    android:paddingHorizontal="10dp"
    android:showDividers="middle"
    android:divider="@drawable/empty_tall_divider">
<!--    <TextView-->
<!--        android:id="@+id/podatoci"-->
<!--        android:visibility="invisible"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@drawable/edit_border"-->
<!--        android:padding="10dp"-->
<!--        android:gravity="center"-->
<!--        android:textSize="20dp"-->
<!--        android:layout_marginHorizontal="30dp"/>-->
    <TextView
        android:id="@+id/imeAktivnost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/opisAktivnost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/vremeAktivnost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/lokacijaAktivnost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/povtorlivostAktivnost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:id="@+id/rejting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <Button
        android:id="@+id/prifatiAktivnost"
        android:visibility="invisible"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_gravity="center_horizontal"
        android:text="Прифати Активност"
        android:textColor="@color/black"/>

</LinearLayout>