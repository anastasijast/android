<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignIn"
    android:background="@drawable/bg">
    <TextView
        android:id="@+id/najava_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="НАЈАВА"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/instrukcii_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/najava_n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Внесете го вашиот e-mail и password"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/email_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/instrukcii_n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:hint="Email Адреса"
        android:ems="20"
        android:background="@drawable/edit_border"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        />
    <EditText
        android:id="@+id/password_n"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:ems="20"
        android:hint="Лозинка"
        android:inputType="textPassword"
        android:background="@drawable/edit_border"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        />
    <Button
        android:id="@+id/kopce_najava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_n"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Најави Се"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>