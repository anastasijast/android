<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:background="@drawable/bg">
    <TextView
        android:id="@+id/registracija_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="РЕГИСТРАЦИЈА"
        android:textAlignment="center"
        android:textSize="40dp"
        android:layout_marginTop="40dp"
        />
    <TextView
        android:id="@+id/instrukcii_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registracija_r"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Внесете го вашето корисничко име, e-mail и password"
        android:textAlignment="center"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/Tip"
        app:layout_constraintTop_toBottomOf="@+id/instrukcii_r"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:spinnerMode="dialog"
        />
    <EditText
        android:id="@+id/ime_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/spinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:hint="Име и Презиме"
        android:ems="20"
        android:background="@drawable/edit_border"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/broj_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ime_r"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:hint="Телефонски Број"
        android:ems="20"
        android:background="@drawable/edit_border"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/email_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/broj_r"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:hint="Email Адреса"
        android:ems="20"
        android:background="@drawable/edit_border"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/password_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_r"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="40dp"
        android:ems="20"
        android:hint="Лозинка"
        android:inputType="textPassword"
        android:background="@drawable/edit_border"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/kopce_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_r"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Регистрирај Се"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        />
</androidx.constraintlayout.widget.ConstraintLayout>